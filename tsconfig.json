{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "baseUrl": "./",
    "jsx": "react",
    "paths": {
      "*": ["node_modules/@types/*"]
    },
    "typeRoots": ["typings/*", "node_modules/@types/*"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": true,
    "resolveJsonModule": true,
    "lib": ["es5", "es2015", "es2016", "es2017", "es2018", "dom"]
  },
  "include": ["src/**/*"]
}
